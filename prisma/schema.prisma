generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  lists MovieList[]
}

model MovieGenre {
  id          Int @id @default(autoincrement())
  name        String @unique

  movies Movie[]
}

model Movie {
  id             String @id @default(uuid())
  tmdbId         Int @unique
  name           String
  sinopsis       String?
  releaseDate    DateTime?
  posterUrl      String?
  ageRestriction Int?
  createdAt      DateTime @default(now())

  genres  MovieGenre[]
  lists   MovieList[]
}

model MovieList {
  id          String  @id @default(uuid())
  name        String
  description String?
  public      Boolean @default(false)

  movies Movie[]
  User   User   @relation(fields: [userId], references: [id])
  userId String
}
